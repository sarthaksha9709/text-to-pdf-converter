{
  "name": "text-to-pdf-converter",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @text2pdf/web dev",
    "dev:api": "pnpm --filter @text2pdf/api dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier --write ."
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.0"
  }
}
